doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    title= title
    link(rel='stylesheet', href='/libraries/bootstrap-3.3.6/css/bootstrap.min.css')
    link(rel='stylesheet', href='/libraries/bootstrap-3.3.6/css/bootstrap-theme.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')

  body
    // Fixed navbar
    nav.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
      .container
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') NEWS ENGINE
        .navbar-collapse.collapse
          ul.nav.navbar-nav
            li
              a(href='/') Home
            li
              a(href='/news') News
          ul.nav.navbar-nav.navbar-right
            if user
              li.dropdown
                a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false') User menu&nbsp;
                  span.caret
                ul.dropdown-menu
                  li
                    a(href='/users/home') User area
                  li
                    a(href='/users/news/create') Add news
                  li
                    a(href='/users/logout') Sign out
            else
              li
                a(href='/users/login') Sign in
              li
                a(href='/users/register') Register
    #content.container
      block content

  script(src='/libraries/jquery/jquery-1.12.4.min.js')
  script(src='/libraries/bootstrap-3.3.6/js/bootstrap.min.js')
